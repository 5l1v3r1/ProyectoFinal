@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}


<div align="center">
    <div class="col-md-6">
        <div class="card">
            <h4 class="card-header elegant-color white-text text-center py-4">@ViewData["Title"]</h4>
            <section>
                <div class="card-body px-lg-5 pt-0">
                    <form  id="account" method="post">
                      
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <i class="fas fa-user"></i>
                            <label asp-for="Input.Email"></label>
         
                            <input asp-for="Input.Email" class="form-control mb-4" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <i class="fas fa-lock"></i>
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control mb-4" placeholder="Contraseña" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Recuperar Contraseña</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear una nueva cuenta</a>
                            </p>
                        </div>
                    </form>
                    </div>
            </section>
        </div>



